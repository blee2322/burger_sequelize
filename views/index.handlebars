<div class="container">
  <div class="row">
    {{!--Left Side of the Page Contains Undevoured Burgers --}}
    <div class="col-xs-6">
      <ul>
        {{#each burger}}
          {{#unless devour}}
            {{>burger/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    {{!-- Right Side of the Already Devoured --}}
    <div class="col-xs-6">
      <ul>
        {{#each burger}}
          {{#if devour}}
            {{>burger/burger-block}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
      </ul>
    </div>
    <form class="create-form">

      <div class="form-group">
       <label for="burg">Burger Name:</label>
       <input type="text" id="burg" name="name">
      </div>
      <button type="submit" class="btn btn-primary btn-lg">Add Burger</button>
    </form>
  </div>
</div>